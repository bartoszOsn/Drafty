html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/static/styles/theme.css")
        link(rel="stylesheet", href="/static/styles/accountLayout.css")
        link(rel="icon" href="/static/images/logo-min.svg" type="image/x-icon")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous")
        block head
    body.row.align-items-center.justify-content-center.bg-light
        
        .card.shadow.col-md-6.pb-4.p-4
            a.mt-3.mb-3(href="#")
                img.logo(src="/static/images/logo-full.svg", alt="Drafty")
            if warning
                div.alert.alert-danger(role='alert') #{warning}
            block content
        block scripts