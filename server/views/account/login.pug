extends _layout.pug
//-
    html(lang="en")
        head
            meta(charset="UTF-8")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            link(rel="stylesheet", href="static/styles/theme.css")
            script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous")
            title Document
        body
            #app
                form(method='post')
                    validated-textbox.mx-3.mt-3.mb-1(type="text", placeholder="Login", :validator="validateUsername")
                    validated-textbox.mx-3.mb-1(:type="showPassword?'text':'password'", placeholder="Password", :validator="validatePassword")
                    .form-check.mx-3.mb-1
                        label.form-check-label Show password?
                            input.form-check-input(type="checkbox" v-model="showPassword")
                    button.mx-3(type="submit" class="btn btn-primary") Log in
            script(src="/static/scripts/login.js")

block head
    title Log in - Drafty

block content
    #app
        h1.mx-3 Log in
        form(method='post')
            div.mx-3.mt-3.mb-3.form-floating
                input.form-control(
                    type="text"
                    id="username-input"
                    name="username"
                    placeholder="Username"
                    v-model="username"
                )
                label(:for="username-input") Username
            div.mx-3.mb-1.form-floating
                input.form-control(
                    :type="showPassword?'text':'password'"
                    id="password-input"
                    name="password"
                    placeholder="Password"
                    v-model="password"
                )
                label(:for="username-input") Password
            .form-check.mx-3.mb-3
                label.form-check-label Show password?
                    input.form-check-input(type="checkbox" v-model="showPassword")
            .d-grid.mx-3.mb-3
                button.btn.btn-primary.btn-lg(type="submit" :disabled="username.length == 0 || password.length == 0") Log in
            p.mx-3.mb-1
                a.link-primary(href="#") Forgot password?
            p.mx-3.mb-4
                span Don't have account? 
                a.link-primary.bold(href="#") Sign up!
block scripts
    script(src="/static/scripts/login.js")